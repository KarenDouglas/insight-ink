
<body>
    <section id="newEntryFormContainer" class="card"
        style="width: 450px; background-color: lightgrey; color: #000;">
        <form class="card-body">
            <div class="mb-3">
                <label for="newEntryTitle" class="form-label">Title:</label>
                <input class="form-control" type="text" id="newEntryTitle">
            </div>
            <div class="mb-3">
                <label for="newEntry" class="form-label">Entry :</label>
                <textarea class="form-control" type="text" id="newEntry"></textarea>
            </div>
            <div class="mb-3">            
                <label for="newHabit" class="form-label">Habit:</label>    {{#each habits}}
                <div class="form-check">
                <input type="checkbox" id="{{id}}" name="habitToBeTracked" value="{{id}}">
                <label for="{{id}}">{{habit_name}}</label><br>
                </div>
            {{/each}}
            </div>
            <div class="mb-3">
                <label for="moodSelect" class="form-label">Mood</label>
                <select id="moodSelect" class="form-select">
                    <option value="happy">Happy</option>
                    <option value="angry">Angry</option>
                    <option value="calm">Calm</option>
                    <option value="anxious">Anxious</option>
                    <option value="excited">Excited</option>
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit" id="newEntrySubmitButton">Submit</button>
            </div>
        </form>
        <footer class="bg-light text-center" style="padding: 10px; color: #000;">
            <div class="wrapper">
                <!-- Add your footer content here -->
              
            </div>
        </footer>
    </section>

    <script src="js/newEntries.js"></script>
</body>

</html>







