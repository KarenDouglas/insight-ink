<body>
    <section id="newEntryContainer">
        <section id="entryContainer">
            {{#if entries.[0]}}
                {{{renderLastEntry entries}}}
            {{/if}}
        </section>
    </section>
    <section id="pastEntriesContainer">
        {{#each entries as |entry|}}
            <section id="{{entry.id}}" class="pastEntry">
                <section>
                    <h2><strong>{{entry.title}}</strong></h2>
                    <p> <strong>Mood:</strong> {{entry.mood}}</p>
                    <p> <strong>Habits:</strong></p>
                    <ul>
                        {{#each entry.habits as |habit|}}
                            <li>{{habit.habit_name}}</li>
                        {{/each}}
                    </ul>
                    <p>{{entry.description}}</p>
                    <button id="deleteBtn-{{entry.id}}">delete</button>
                    <button id="editBtn-{{entry.id}}">edit</button>
                </section>
            </section>
        {{/each}}
    </section>
      
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">{{modalTitle}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="modalBodyText">{{modalBodyText}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="saveChangesBtn">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeModalBtn">Close</button>
      </div>
    </div>
  </div>
</div>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
      <script src="/js/dashboard.js"></script>
</body>

