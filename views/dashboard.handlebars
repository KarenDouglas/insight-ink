<body style="font-family: 'Arial', sans-serif; background-color: #ffc0cb; padding: 20px;">

    <section id="newEntryContainer" style="margin-bottom: 20px;">
        <section id="entryContainer" style="background-color: #ffffff; padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            {{#if entries.[0].title}}
                {{{renderLastEntry entries}}}
            {{/if}}
        </section>
    </section>

    <section id="pastEntriesContainer" style="background-color: lightgrey; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        {{#each entries as |entry|}}
            <section id="{{entry.id}}" style="margin-bottom: 20px; border: 1px solid #dee2e6; padding: 15px; border-radius: 8px; background-color: lightgrey;">
                <h2 style="color: #007bff;">{{entry.title}}</h2>
                <p style="font-weight: bold; color: #6c757d;">Mood: {{entry.mood}}</p>
                <ul>
                    {{#each entry.habits as |habit|}}
                        <li>{{habit.habit_name}}</li>
                    {{/each}}
                </ul>
                <p>{{entry.description}}</p>
                <button id="deleteBtn-{{entry.id}}" style="background-color: #007bff; color: #fff; padding: 5px 10px; border: none; cursor: pointer;">Delete</button>
                <button id="editBtn-{{entry.id}}" style="background-color: #007bff; color: #fff; padding: 5px 10px; border: none; cursor: pointer;">Edit</button>
            </section>
        {{/each}}
    </section>

    <script src="/js/dashboard.js"></script>
</body>

</html>